
/*
CSS to be applied ONLY on the ring page
*/

@import reusable

#ring-page

  h4
    margin-bottom : 20px

  strong
    headline-bold()

  #current-ring
    max-width   : 850px
    margin      : 0 auto 45px auto
    padding-top : 40px

    & > span.gui-text-flat
      line-height : 1.5
      display     : block

  .clear
    clear : both

  .chart-spacer
    float  : left
    width  : 30px
    height : 1px

  .chart
    corners()
    background     : rgba(0, 0, 0, .15)
    border         : 1px solid rgba(0, 0, 0, .6)
    float          : left
    margin         : 25px 3px 30px
    padding-top    : 15px
    width          : 254px
    vertical-align : top
    overflow       : visible
    position       : relative

    > div
      text-align : center

    > span
      headline-font()
      singleCorner(left, bottom)
      singleCorner(right, bottom)
      background     : rgba(0, 0, 0, .25)
      display        : inline-block
      font-size      : 15px
      padding        : 15px
      line-height    : 1.3
      vertical-align : top
      margin-top     : 12px

    .gui-rect-button
      position    : absolute
      left        : 50%
      bottom      : -64px
      margin-left : -68px

  .details
    corners()
    copy-font()
    position    : relative
    line-height : 1.4
    font-size   : 14px
    font-style  : italic
    background  : rgba(0, 0, 0, .35)
    padding     : 25px
    margin      : 55px 5px 0
    overflow    : visible

    h4
      font-style : normal

    .actions-pointer
      dimensions(72px, 13px)
      background : url('/admin/ui/images/pointer.png') center top no-repeat transparent
      margin-top : 8px

    .actions-pointer-left
      absoluteLeft(87px, -21px)

    .actions-pointer-right
      absoluteLeft(676px, -21px)

    .actions-pointer-center
      absoluteLeft(382px, -21px)

  .partition-section
    margin-top : 45px

  #legend
    dimensions(408px, auto)
    border-right : 1px solid lightWhite;
    float  : left
    margin : 25px 0 25px 0

    span
      headline-font()
      display   : inline-block
      width     : 80%
      margin    : 3px 0 15px 0
      font-size : 15px
      line-height    : 1.3
      vertical-align : top

      &.footnote
        width         : auto
        border-top    : 1px solid lightWhite
        padding       : 20px 20px 0 0
        margin-bottom : 10px

    .partition
      display : inline-block
      float   : none
      margin-right   : 8px
      vertical-align : top

  #partition-container
    dimensions(388px, auto)
    overflow : auto
    margin   : 25px 0 25px 4%
    float    : left
    padding-right: 5px;

  .partition
    css-transition(background-color .3s ease, border-color .3s ease)
    dimensions(14px, 14px)
    corners(2px)
    background : #626262
    display    : block
    float      : left
    margin     : 3px
    border     : 2px solid rgba(0, 0, 0, .78)

    &.gray
      radialGradient(#626262, #555555)

    &.orange
      css-transition(background-color .3s ease, border-color .3s ease)
      radialGradient(rgba(255, 183, 101, 1), rgba(255, 183, 101, 0))
      vendor('box-shadow', 0 0 8px rgba(255, 183, 101, .45))
      border-color     : #36280e
      background-color : #feac4f

      &.pulse
        vendor('animation', pulseOrange 1s infinite)

    &.red
      css-transition(background-color .3s ease, border-color .3s ease)
      radialGradient(rgba(246, 93, 93, 1), rgba(246, 93, 93, 0))
      vendor('box-shadow', 0 0 8px rgba(246, 93, 93, .45))
      border-color     : #2b0c0c
      background-color : #ea5050

      &.pulse
        vendor('animation', pulseRed 1s infinite)

    &.blue
      css-transition(background-color .3s ease, border-color .3s ease)
      radialGradient(rgba(59, 170, 255, 1), rgba(59, 170, 255, 0))
      vendor('box-shadow', 0 0 8px rgba(59, 170, 255, .45))
      border-color     : #071a20
      background-color : #299ce5

      &.pulse
        vendor('animation', pulseBlue 1s infinite)

    &.green
      css-transition(background-color .3s ease, border-color .3s ease)
      radialGradient(rgba(132, 255, 126, 1), rgba(132, 255, 126, 0))
      vendor('box-shadow', 0 0 8px rgba(132, 255, 126, .45))
      border-color     : #071a03
      background-color : #6ce157

      &.pulse
        vendor('animation', pulseGreen 1s infinite)

  @media screen and (max-width: 620px)
    #legend, #partition-container
      float        : none
      width        : auto
      border-right : none
      margin-left  : 0

    h4.partition-header
      hSize(26px, 0, 12px)
      font-weight : normal

